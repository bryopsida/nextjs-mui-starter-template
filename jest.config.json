{
  "testPathIgnorePatterns": ["node_modules", "tests"],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "**/*.ts",
    "!**/cli-tools/*",
    "!**/*.config.js",
    "!**/*.spec.ts",
    "!**/lcov-report/*",
    "!**/node_modules/**",
    "!**/tests/*"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 50,
      "functions": 40,
      "lines": 70
    }
  }
}
